@if (Translations.Any())
{
    <table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Vietnamese</th>
            <th>English</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var translation in Translations)
        {
            <tr>
                <td>
                    <i class="far fa-edit btn" @onclick="@(() => ShowEditTranslation(translation))"></i>
                </td>
                <td>@translation.Vietnamese</td>
                <td>@translation.English</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>Add your first translation :)</p>
}

@code {
    [CascadingParameter] public IModalService Modal { get; set; }
    [Parameter] public List<Translation> Translations { get; set; }
    
    private void ShowEditTranslation(Translation translation)
    {
        var parameters = new ModalParameters();
        parameters.Add(nameof(Translation), translation);

        Modal.Show<TranslationEditForm>("Edit Translation", parameters);
    }
}