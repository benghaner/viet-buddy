@inject NavigationManager Navigation

<div class="d-flex align-items-center gap-2 my-3">
    <input type="search" @bind="searchTerm" class="form-control" placeholder="Tìm...">
    <button type="button" @onclick="Search" class="btn btn-primary btn-sm">Tìm</button>
</div>

@code {
    private string searchTerm;
        
    private void Search()
    {
        Navigation.NavigateTo($"/translations/{searchTerm}");
    }
}
